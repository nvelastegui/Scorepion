<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/layout_scored"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_titleTopTeamsBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Scored?"
            android:layout_weight="0"/>

        <View
            android:layout_width="16dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"/>

        <Spinner
            android:id="@+id/spinner_ScoredTF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_weight="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ongoal"
        android:layout_below="@+id/layout_scored"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="On Goal?"
            android:layout_weight="0"/>

        <View
            android:layout_width="16dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"/>

        <Spinner
            android:id="@+id/spinner_OnGoalTF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_weight="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ShotByPlayer"
        android:layout_below="@+id/layout_ongoal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Shot By?"
            android:layout_weight="0"/>

        <View
            android:layout_width="16dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"/>

        <Spinner
            android:id="@+id/spinner_ShotByPlayerSelection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_weight="0"/>

    </LinearLayout>



</RelativeLayout>
